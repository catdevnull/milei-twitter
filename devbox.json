{
  "packages": [
    "nodejs@latest",
    "nodePackages.pnpm@latest",
    "git-lfs@latest",
    "sqlite@latest",
    "turso-cli@latest",
    "git-filter-repo@latest",
    "python@latest",
    "python312Packages.pip@latest"
  ],
  "env": {
    "DEVBOX_PYPROJECT_DIR": "$PWD/scraper-py"
  },
  "shell": {
    "init_hook": [". $VENV_DIR/bin/activate.fish"],
    "scripts": {
      "dev": ["pnpm dev"],
      "reset-db-to-prod": [
        "rm -f sqlite.db{,-shm,-wal}",
        "sqlite3 sqlite.db 'PRAGMA journal_mode=WAL;'",
        "turso db shell http://preciazo:8080 '.dump' | sqlite3 sqlite.db"
      ]
    }
  }
}
