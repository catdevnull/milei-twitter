{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["ES2023", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "ts-node": {
    "swc": true,
    "esm": true
  }
}
